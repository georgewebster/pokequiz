<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AnswerButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/answer_button</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/menu_button</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LifelineButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/lifeline_button</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
